#!/bin/bash

FEED_URL="${BLOCK_INSTANCE:-https://www.archlinux.org/feeds/news/}"

FEED_CONTENT=$(curl "${FEED_URL}" -s)
FEED_TITLE=$(echo "${FEED_CONTENT}" | grep -v "xmlns:atom" | grep -o '<title>.*</title>' | head -n 1 | sed 's/\(<title>\|<\/title>\)//g')
FEED_URL=$(echo "${FEED_CONTENT}"  | grep -v "xmlns:atom" | grep -o '<link>.*</link>' | head -n 1 | sed 's/\(<link>\|<\/link>\)//g')

if [[ "${BLOCK_BUTTON}" -eq 1 ]]; then
  xdg-open "${FEED_URL}"
fi

echo "${FEED_TITLE}"
echo "${FEED_TITLE}"
echo ""